---
const {variant="primary", size="medium"} = Astro.props;

const buttonStyling = "border-2 text-brown-400 border-stone-800 m-5 px-12 hover:bg-stone-400 hover:text-stone-100 shadow-inner font-semibold rounded-2xl";

const variantClasses = {
    "primary": "text-sm",
    "secondary": "text-lg",
    "tertiary": "text-xl"
};

const sizeClasses ={
    "small": "p-2 text-l",
    "medium": "p-2 px-14 text-xl",
    "large": "p4 text-2xl"
};

---

<div>
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>